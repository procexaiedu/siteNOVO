{
  "permissions": {
    "allow": [
      "Bash(dir:*)",
      "Bash(npx create-next-app@latest:*)",
      "Bash(npm install)",
      "Bash(npm run dev:*)",
      "mcp__shadcn__search_items_in_registries",
      "mcp__shadcn__get_add_command_for_items",
      "Bash(npx shadcn@latest add:*)",
      "mcp__shadcn__view_items_in_registries",
      "mcp__shadcn__list_items_in_registries",
      "Bash(npm run build:*)",
      "Bash(git add:*)",
      "Bash(Remove-Item -Recurse -Force .next)",
      "Bash(tasklist:*)",
      "Bash(findstr:*)",
      "Bash(taskkill:*)",
      "Bash(test:*)",
      "mcp__shadcn__get_project_registries",
      "Bash(cat:*)",
      "mcp__ide__getDiagnostics",
      "mcp__shadcn__get_audit_checklist",
      "Bash(rm:*)",
      "Bash(npx tsc:*)",
      "Bash(npm ls:*)",
      "Bash(curl:*)",
      "Bash(npx shadcn@latest view:*)",
      "Bash(npx shadcn@latest list:*)",
      "Bash(npm config:*)",
      "Bash(node -e:*)",
      "Bash(certutil -generateSSTFromWU roots.sst)",
      "Bash(certutil -addstore:*)",
      "Bash(del roots.sst)",
      "Bash(set NODE_TLS_REJECT_UNAUTHORIZED=0)",
      "mcp__shadcn__get_item_examples_from_registries"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "shadcn"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.js || \"$CLAUDE_TOOL_FILE_PATH\" == *.ts || \"$CLAUDE_TOOL_FILE_PATH\" == *.jsx || \"$CLAUDE_TOOL_FILE_PATH\" == *.tsx ]]; then npx eslint \"$CLAUDE_TOOL_FILE_PATH\" --fix 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.py ]]; then pylint \"$CLAUDE_TOOL_FILE_PATH\" 2>/dev/null || true; elif [[ \"$CLAUDE_TOOL_FILE_PATH\" == *.rb ]]; then rubocop \"$CLAUDE_TOOL_FILE_PATH\" --auto-correct 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 .claude/scripts/context-monitor.py"
  }
}
